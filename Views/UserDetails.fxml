<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="650" styleClass="background" stylesheets="@Default.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.UserDetailsController">

    <children>
        <Label layoutX="250" layoutY="10" style="-fx-font-size: 24px; -fx-font-weight: bold;" styleClass="Lable" text="User Details" />

        <!-- User info fields -->
        <VBox layoutX="50" layoutY="50" spacing="15">
            <HBox spacing="10">
                <Label minWidth="100" text="First Name:" />
                <TextField fx:id="firstNameField" prefWidth="200" styleClass="container" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Surname:" />
                <TextField fx:id="surnameField" prefWidth="200" styleClass="container" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Address:" />
                <TextField fx:id="addressField" prefWidth="200" styleClass="container" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Phone Number:" />
                <TextField fx:id="phoneField" prefWidth="200" styleClass="container" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Password:" />
                <TextField fx:id="passwordField" prefWidth="200" styleClass="container" />
            </HBox>
        </VBox>

        <!-- Action buttons -->
        <HBox layoutX="50" layoutY="260" spacing="15">
            <Button fx:id="editSaveButton" onAction="#handleEditSave" styleClass="Button" text="Edit">
                <tooltip>
                    <Tooltip text="Edit or Save changes" />
                </tooltip>
            </Button>
            <Button fx:id="deleteAccountButton" onAction="#handleDeleteAccount" styleClass="Button" text="Delete Account">
                <tooltip>
                    <Tooltip text="Delete selected account" />
                </tooltip>
            </Button>
            <Button fx:id="deleteUserButton" onAction="#handleDeleteUser" styleClass="Button" text="Delete User">
                <tooltip>
                    <Tooltip text="Delete this user and all accounts" />
                </tooltip>
            </Button>
        </HBox>

        <!-- Accounts table -->
        <Label layoutX="50" layoutY="310" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Accounts:" />
        <TableView fx:id="accountTable" layoutX="50" layoutY="340" prefHeight="150" prefWidth="550">
            <columns>
                <TableColumn fx:id="accountNumberColumn" prefWidth="180" text="Account Number" />
                <TableColumn fx:id="accountTypeColumn" prefWidth="180" text="Type" />
                <TableColumn fx:id="balanceColumn" prefWidth="180" text="Balance" />
            </columns>
        </TableView>
         <Button layoutX="19.0" layoutY="16.0" onAction="#handleBack" styleClass="Button" text="Back">
             <tooltip>
                 <Tooltip text="Return to Admin Home" />
             </tooltip>
         </Button>
      <ImageView fitHeight="200.0" fitWidth="200.0" layoutX="407.0" layoutY="44.0">
         <image>
            <Image url="@../Resources/logo.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
